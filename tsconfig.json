{
  "compilerOptions": {
    "jsx": "react",
    "module": "ESNext",
    "target": "ES6",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution":"node",
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": ["src"],
}